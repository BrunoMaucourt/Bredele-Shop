{% extends 'base.html.twig' %}

{% block title %}
	Ajouter un produit
{% endblock title %}

{% block main %}

    <h1 class="text-3xl w-full flex justify-center mt-10">Ajouter une catégorie de produit</h1>

	<section class="my-10 px-10 w-full flex flex-wrap justify-around">
        {{ form_start(productCategoryForm, {
                'attr': {
                    'class' : 'm-10 py-4 w-full md:w-1/2 bg-white border border-red-500 flex flex-col justify-center items-center'
                }
            })
        }}

            <fieldset class="flex flex-col gap-2 mt-2 justify-center items-center [&>*]:flex [&>*]:flex-col md:[&>*]:flex-row [&>*]:justify-center [&>*]:items-center">
                <legend class="w-full flex justify-center">Informations de la catégorie</legend>
                {{ form_row(productCategoryForm.name, {
                    label: 'Nom de la catégorie',
                        attr: {
                            'class': 'border rounded-lg md:ms-6'
                        }
                    })
                }}
            </fieldset>

            <button type="submit" class="mt-10 bg-red-500 text-white text-xl rounded-lg p-2">
                Ajouter une catégorie
            </button>

        {{ form_end(productCategoryForm) }}
    </section>

{% endblock main %}
